@model JobDto


<div style=" border: 2px solid #1e2125; width: 60%; margin: auto; background-color: #0d6efd; border-radius: 10px; height: 600px; padding-top: 20px; margin-top: 30px" >
<form class="row g-3" action="Update" method="post" style="display: block;">
                <input type="number" hidden="hidden" asp-for="Id"/>
                <div class="col-md-6">
        <label for="inputEmail4" class="form-label" style="margin-left: 17vh; font-weight: bold; font-size: 20px">Title</label>
        <input style="width: 70vh; margin-left: 17vh" asp-for="Title" type="text" class="form-control" id="inputEmail4">
    </div> <br/>
    <div class="col-md-6">
        <label for="inputPassword4" class="form-label" style="margin-left: 17vh; font-weight: bold; font-size: 20px">ClosingData</label>
        <input style="width: 70vh; margin-left: 17vh" asp-for="ClosingData" type="text" class="form-control" id="inputPassword4">
    </div>
    <div class="col-12">
        <label for="inputAddress" class="form-label" style="margin-left: 17vh; font-weight: bold; font-size: 20px">CategoryId</label>
        <input style="width: 70vh; margin-left: 17vh" asp-for="CategoryId" type="text" class="form-control" id="inputAddress" placeholder="CategoryId">
    </div>
    <div class="col-12">
        <label for="inputAddress2" class="form-label" style="margin-left: 17vh; font-weight: bold; font-size: 20px">City</label>
        <input style="width: 70vh; margin-left: 17vh" asp-for="City"  type="text" class="form-control" id="inputAddress2" placeholder="City">
    </div>
    <div class="col-md-6">
        <label for="inputCity" class="form-label" style="margin-left: 17vh; font-weight: bold; font-size: 20px">Text</label>
        <input style="width: 70vh; margin-left: 17vh" asp-for="Text" type="text" class="form-control" id="inputCity">
    </div>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" style="margin-left: 17vh;">
            <label class="form-check-label" for="gridCheck" style="font-weight: bold; font-size: 20px">
                Check me out
            </label>
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary" style="margin-left: 17vh; font-weight: bold; font-size: 20px; background-color: red; ">Update</button>
    </div>
</form>
</div>